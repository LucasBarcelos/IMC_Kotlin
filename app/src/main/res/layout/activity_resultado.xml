<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultadoActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvIMC" app:layout_constraintStart_toEndOf="@+id/ivIMC"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:text="@string/valor" android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/ivIMC" app:layout_constraintTop_toTopOf="@+id/ivIMC"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/fem_abaixo"
            android:id="@+id/ivIMC" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvCredits" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:text="@string/calculadora_imc"
            style="@style/label_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="@string/desenvolvido_por_lucas_barcelos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvCredits" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:textAlignment="center"/>
    <TextView
            android:text="@string/resultado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvStatusIMC"
            app:layout_constraintTop_toBottomOf="@+id/tvIMC" app:layout_constraintStart_toEndOf="@+id/ivIMC"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>